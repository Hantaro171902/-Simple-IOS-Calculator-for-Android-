<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/black"
    android:padding="20dp"
    tools:context=".MainActivity">

    <TextView
        android:id="@+id/screen"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_above="@+id/nums"
        android:layout_marginBottom="0dp"
        android:gravity="right"
        android:paddingHorizontal="15dp"
        android:paddingVertical="35dp"
        android:text="0"
        android:textColor="@color/white"
        android:textSize="50sp"
        android:textStyle="bold" />

    <GridLayout
        android:id="@+id/nums"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:columnCount="4"
        android:orientation="horizontal"
        android:paddingTop="10dp"
        android:rowCount="5">

        <!-- Row 1-->
        <Button
            android:id="@+id/AC"
            style="@style/Button3"
            android:text="AC" />

        <Button
            android:id="@+id/del"
            style="@style/Button3"
            android:text="C" />

        <Button
            android:id="@+id/percent"
            style="@style/Button3"
            android:text="%" />

        <Button
            android:id="@+id/divide"
            style="@style/Button1"
            android:text="/" />

        <!-- Row 2-->
        <Button
            android:id="@+id/num7"
            style="@style/Button2"
            android:text="7" />

        <Button
            android:id="@+id/num8"
            style="@style/Button2"
            android:text="8" />

        <Button
            android:id="@+id/num9"
            style="@style/Button2"
            android:text="9" />

        <Button
            android:id="@+id/multiply"
            style="@style/Button1"
            android:text="x" />

        <!-- Row 3-->
        <Button
            android:id="@+id/num4"
            style="@style/Button2"
            android:text="4" />

        <Button
            android:id="@+id/num5"
            style="@style/Button2"
            android:text="5" />

        <Button
            android:id="@+id/num6"
            style="@style/Button2"
            android:text="6" />

        <Button
            android:id="@+id/sub"
            style="@style/Button1"
            android:text="-" />

        <!-- Row 4-->
        <Button
            android:id="@+id/num1"
            style="@style/Button2"
            android:text="1" />

        <Button
            android:id="@+id/num2"
            style="@style/Button2"
            android:text="2" />

        <Button
            android:id="@+id/num3"
            style="@style/Button2"
            android:text="3" />

        <!-- Row 5-->
        <Button
            android:id="@+id/plus"
            style="@style/Button1"
            android:layout_row="0"
            android:text="+" />

        <Button
            android:id="@+id/num0"
            style="@style/Button0"
            android:layout_columnSpan="2"
            android:paddingStart="30dp"
            android:text="0" />

        <Button
            android:id="@+id/dot"
            style="@style/Button2"
            android:text="," />

        <Button
            android:id="@+id/equal"
            style="@style/Button1"
            android:text="=" />


    </GridLayout>

</RelativeLayout>

